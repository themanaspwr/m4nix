---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pricing | M4N!X">
  <section class="container">
    <h1>Pricing</h1>

    <div class="pricing-grid">
      <div class="card">
        <h3>Free</h3>
        <p>1 landing page · ZIP file export</p>
        <p style="font-size:1.5rem;margin-top:.5rem;">₹0</p>
      </div>

      <div class="card">
        <h3>Starter</h3>
        <p>Single page + contact</p>
        <p style="font-size:1.5rem;margin-top:.5rem;">₹499</p>
      </div>

      <div class="card">
        <h3>Pro</h3>
        <p>Full website + optional AI automations</p>
        <p style="font-size:1.5rem;margin-top:.5rem;">₹3,999</p>
      </div>
    </div>
  </section>
</Layout>
