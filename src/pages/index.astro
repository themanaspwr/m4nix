---
import Layout from '../layouts/Layout.astro';
---

<Layout title="M4N!X — I build with AI">

  <!-- FULL PAGE PARTICLES -->
  <canvas id="particles-canvas"></canvas>


  <!-- HERO -->
  <section class="hero">
    <h1>M4N!X</h1>
    <p>I build with AI, so you don't have to.</p>

    <div style="margin-top:1.25rem">
      <a
        class="btn btn-primary"
        href="#"
        onclick="(e=>{e.preventDefault(); window.Clerk.openSignUp({afterSignInUrl:'/dashboard'})})(event)"
      >
        Get started
      </a>
    </div>

    <!-- FLOATING AI PARTICLES -->
    <canvas id="aiParticles" class="ai-particles"></canvas>

  </section>


  <!-- WHY M4N!X -->
  <section class="container" style="margin-top:4rem;">
    <h2 style="font-size:2rem; margin-bottom:1.5rem;">Why M4N!X?</h2>

    <div class="why-grid">
      <div class="why-card">
        <h3>Fast Turnaround</h3>
        <p>Get websites, branding, and automations delivered quickly with AI.</p>
      </div>

      <div class="why-card">
        <h3>Affordable Pricing</h3>
        <p>Pay only for what you need — no messy subscriptions.</p>
      </div>

      <div class="why-card">
        <h3>No Technical Hassle</h3>
        <p>You explain what you want — I handle everything else.</p>
      </div>
    </div>
  </section>


  <!-- HOW IT WORKS -->
  <section class="container" style="margin-top:4rem;">
    <h2 style="font-size:2rem; margin-bottom:1.5rem;">How It Works</h2>

    <div class="steps-grid">
      <div class="step-card">
        <span class="step-number">1</span>
        <h3>Tell Me What You Need</h3>
        <p>Describe your website, branding, or automation requirements.</p>
      </div>

      <div class="step-card">
        <span class="step-number">2</span>
        <h3>I Build With AI</h3>
        <p>I generate everything using AI tools, then customize it for you.</p>
      </div>

      <div class="step-card">
        <span class="step-number">3</span>
        <h3>You Get Instant Results</h3>
        <p>Your final output is delivered quickly with a clean modern design.</p>
      </div>
    </div>
  </section>


  <!-- TESTIMONIALS (Carousel) -->
  <section class="container" style="margin-top:4rem;">
    <h2 style="font-size:2rem; margin-bottom:1.5rem;">Testimonials</h2>
  
    <div class="testimonial-carousel">
      <div class="carousel-track">
        
        <!-- List duplicated twice -->
        <div class="testimonial-card"> 
          <p>“Super fast and clean work. Website delivered exactly how I imagined.”</p>
          <span>— Client A</span>
        </div>

        <div class="testimonial-card"> 
          <p>“I saved hours every week thanks to the automation workflows.”</p>
          <span>— Client B</span>
        </div>

        <div class="testimonial-card"> 
          <p>“Branding kit was perfect. Minimal, modern, aesthetic.”</p>
          <span>— Client C</span>
        </div>

        <!-- DUPLICATE SET -->
        <div class="testimonial-card"> 
          <p>“Super fast and clean work. Website delivered exactly how I imagined.”</p>
          <span>— Client A</span>
        </div>

        <div class="testimonial-card"> 
          <p>“I saved hours every week thanks to the automation workflows.”</p>
          <span>— Client B</span>
        </div>

        <div class="testimonial-card"> 
          <p>“Branding kit was perfect. Minimal, modern, aesthetic.”</p>
          <span>— Client C</span>
        </div>

      </div>
    </div>
  </section>


  <!-- FEATURED WORK -->
  <section class="container" style="margin-top:4rem; margin-bottom:4rem;">
    <h2 style="font-size:2rem; margin-bottom:1.5rem;">Featured Work</h2>

    <div class="featured-grid">
      <div class="featured-card modal-trigger">
        <div class="placeholder-img"></div>
        <h3>Portfolio Website</h3>
        <p>Clean personal website generated with AI.</p>
      </div>

      <div class="featured-card modal-trigger">
        <div class="placeholder-img"></div>
        <h3>Business Landing Page</h3>
        <p>Modern landing page for a small business.</p>
      </div>

      <div class="featured-card modal-trigger">
        <div class="placeholder-img"></div>
        <h3>Branding Kit</h3>
        <p>Logo + color palette + typography set.</p>
      </div>
    </div>
  </section>


  <!-- MODAL -->
  <div id="modal-overlay" class="modal-overlay">
    <div class="modal-box">
      <button id="modal-close" class="modal-close">×</button>
      <div class="modal-preview"></div>

      <h3>Preview</h3>
      <p>This is a placeholder preview for your featured work.</p>
    </div>
  </div>

  <script src="/scripts/homepage.js" defer></script>
  <script src="/scripts/particles.js" defer></script>

</Layout>
