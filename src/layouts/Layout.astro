---
import '../styles/globals.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props { title?: string }
const { title = 'M4N!X' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <link rel="icon" href="/images/favicon.svg" type="image/svg+xml" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Clerk (auth) -->
    <script>
      window.Clerk ||= {};
      window.Clerk.publishableKey = "pk_REPLACE_WITH_YOUR_CLERK_KEY";
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@clerk/clerk-js@latest/dist/clerk.browser.min.js"></script>
  </head>

  <body>
    <div class="page-wrapper">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
